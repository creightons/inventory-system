extends includes/template.pug

include mixins/input-row.pug

block content
	a(href='/products')
		div.button Back
	div.card.card--max-width
		header.card__header
			h2.card__title Add New Product
		
		form(method='POST' action='/products/add').form
			if error
				div.error #{error}
			
			+inputRow('Name', 'name')
			+inputRow('Product Id', 'productId')
			+inputRow('Price', 'price')
			+inputRow('Vendor', 'vendor')
			+inputRow('Description', 'description')

			button(type='submit').button.button--submit Submit